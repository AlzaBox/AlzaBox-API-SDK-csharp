@page
@model AlzaBox.API.WebExample.Pages.VirtualBox

@{
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card">
                <div class="card-body">

                    <form method="post" class="row g-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Entity.Id" class="form-label"></label>
                            <input asp-for="Entity.Id" class="form-control"/>
                            <span asp-validation-for="Entity.Id" class="text-danger"></span>
                        </div>
                        
                        <div class="btn-group" role="group">
                            <input type="submit" asp-page-handler="Stock" value="Stock by courier" class="btn btn-primary"/>
                            <input type="submit" asp-page-handler="CustomerPickup" value="Pickup by customer" class="btn btn-success"/>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>